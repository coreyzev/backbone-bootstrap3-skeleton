
// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/

// Global values
// --------------------------------------------------

// Grays
// -------------------------

gray-darker =            lighten(#000, 13.5%); // #222
gray-dark =              lighten(#000, 20%);   // #333
gray =                   lighten(#000, 33.5%); // #555
gray-light =             lighten(#000, 60%);   // #999
gray-lighter =           lighten(#000, 93.5%); // #eee

// Brand colors
// -------------------------

brand-primary =         #F24949;
brand-success =         #007229;
brand-warning =         #CC9900;
brand-danger =          #d9534f;
brand-info =            #40B6B8;

*
  box-sizing: border-box

html,
body {
  height: 100%;
  /* The html and body elements cannot have any padding or margin. */

  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
  -ms-font-smoothing: antialiased;
  -o-font-smoothing: antialiased;
  font-smoothing: antialiased;
}

/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto;
  /* Negative indent footer by its height */
  margin: 0 auto -40px;
  /* Pad bottom by footer height */
  padding: 0 0 40px;
  background-color #fff
}

#wrap > .container {
padding: 50px 15px 0;
}

/* Set the fixed height of the footer here */
#footer 
  min-height: 40px;
  background-color: #f5f5f5;
  border-top 2px solid gray-light

  .container .credit 
    margin: 10px 0;
    line-height 10px


.navbar
  min-height 30px
  border-top 3px solid brand-primary
.navbar-brand
  padding 10px 15px
  line-height 10px
.navbar-nav > li > a 
  padding 10px 15px
  line-height 10px
.navbar-inverse .navbar-brand
  color brand-primary


#footer > .container {
  padding-left: 15px;
  padding-right: 15px;
}

code {
  font-size: 80%;
}

.thumbnail, .img-thumbnail
  background-color #eee

.form-signin
  max-width 330px
  padding 15px
  margin 0 auto
  .checkbox
    font-weight normal
  label
    font-size 16px
    font-weight normal
  .form-control
    position relative
    font-size 16px
    height auto
    padding 10px
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    &:focus
      z-index 2
  input[type="text"]
    margin-bottom -1px
    border-bottom-left-radius 0
    border-bottom-right-radius 0
  input[type="password"]
    margin-bottom 10px
    border-top-left-radius 0
    border-top-right-radius 0

.form-signin .form-signin-heading,
.form-signin .checkbox
  margin-bottom 10px

.bs-sidenav
  background-color lighten(brand-warning, 90%) !important

  .active > a
    color brand-danger !important

